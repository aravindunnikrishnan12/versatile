            <div class="date-filters">
                <form id="dateFilterForm" action="/admin/getsalesReport" method="GET">
                    <label for="start-date">Start Date:</label>
                    <input type="date" id="startDate" name="startDate" required>
                    <label for="end-date">End Date:</label>
                    <input type="date" id="endDate" name="endDate" required>
                    <button id="apply-date-filter" type="submit">Filter</button>
                </form>
            </div>
            <div class="duration-filters">
                <form id="filterForm" action="/admin/getsalesReport" method="GET">
                    <select id="filterOption" name="filterOption">
                        <option value="daily" <%= filterOption === 'daily' ? 'selected' : '' %>>Daily</option>
                        <option value="weekly" <%= filterOption === 'weekly' ? 'selected' : '' %>>Weekly</option>
                        <option value="monthly" <%= filterOption === 'monthly' ? 'selected' : '' %>>Monthly</option>
                    </select>
                    <button type="submit" id="apply-duration-filter">Filter</button>
                </form>
            </div>
            <a href="/download/excel" class="add-link" id="download-excel"><button>Download Excel</button></a>
            <a href="<%= `/download/pdf?startDate=${startDate}&endDate=${endDate}&filterOption=${filterOption}` %>" class="add-link" id="download-pdf"><button>PDF Download</button></a>        </div>
       
        <table id="example" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>SL</th>
                    <th>Username</th>
                    <th>Address</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Discounted</th>
                    <!-- <th>Coupon</th> -->
                    <th>Payment Method</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% orders.reverse().forEach((order, index) => { %>
                    <tr class="order-row">
                        <td><%= index + 1 %></td>
                        <td><%= order.user ? order.user.name : 'User not found' %></td>
                        <td><%= order.address.address1 %>, <%= order.address.street %>, <%= order.address.country %>, <%= order.address.pincode %></td>
                        <td><%= order.totalQuantity %></td>
                        <td><%= order.totalPrice %></td>
                        <td><%= order.discountPrice %></td>
                        <!-- <td><%= order.coupon %></td> -->
                        <td><%= order.paymentMethod %></td>
                        <td><%= new Date(order.orderDate).toLocaleString([], { year: 'numeric', month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                    </tr>
                <% }); %>
