        .price-filter button {
        background-color: rgb(238, 0, 0);
        color: #fff;
        cursor: pointer;
        margin-left: 10px;
    }

    .price-filter button:hover {
        background-color: #333;
    }
    .price-filter button {
        background-color:#31473A;
        padding: 10px;
        border-radius: 20px;
        border: none;
        margin-right: 5px;
        font-size: 12px;
        transition: all 0.3s ease;
    }

    .search-bar {
        display: flex;
        align-items: center;
        margin-left: 20px;
    }
    
    .search-input {
        padding: 8px 12px;
        border-radius: 20px;
        border: 1px solid #ccc;
        outline: none;
    }
    
    .search-button {
        background-color: #31473A;
        color: #fff;
        border: none;
        border-radius: 20px;
        padding: 8px 12px;
        margin-left: 10px;
        cursor: pointer;
    }
    .sidebar {
    text-decoration: none;
    position: absolute;
    top: 75px; /* Height of the navbar */
    left: -250px; /* Initially hidden off-canvas */
    bottom: 0;
    width: 250px;
    background-color: #31473A; /* Same as navbar color */
    color: #fff; /* Text color */
    transition: left 0.3s ease; /* Smooth transition for opening and closing */
    z-index: 1000; /* Ensure sidebar is above other content */
}

.sidebar.show {
    left: 0; /* Show sidebar when .show class is added */
}

.sidebar ul {
    list-style-type: none;
    padding-left: 30px;
}

.sidebar li {
    margin-bottom: 40px;
}

.sidebar a {
    background-color: rgb(255, 255, 255);
    display: block;
    padding: 10px;
    color: #000000;
    text-decoration: none;
    border-radius: 20px;
    width: 210px;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
}

.sidebar a:hover {
    background-color: rgba(200, 200, 200, 0.5);
    text-decoration: none;
    color: #fff;
}
.custom-btn {
    background-color: #4d4f52; /* Button background color */
    color: #fff; /* Text color */
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease; /* Smooth transition on hover */
}

.custom-btn:hover {
    background-color: #000000; /* Hover background color */
}


/* Media queries for responsiveness */
@media (max-width: 1200px) {
    .container {
        width: 95%;
        margin-left: auto;
        margin-right: auto;
    }
}

@media (max-width: 992px) {
    .container {
        width: 100%;
        margin: auto;
        padding: 10px;
    }
    td, th {
        font-size: 12px;
        padding: 10px;
    }
}

@media (max-width: 768px) {
    table, thead, tbody, th, td, tr {
        display: block;
    }

    tr {
        border-bottom: 1px solid #ddd;
        margin-bottom: 10px;
    }

    td {
        padding: 10px;
        text-align: right;
        position: relative;
    }

    td:before {
        content: attr(data-label);
        position: absolute;
        left: 10px;
        text-align: left;
        font-weight: bold;
    }

    th {
        display: none;
    }

    .black-button {
        width: 100%;
        margin-top: 5px;
    }
}

@media (max-width: 576px) {
    h1 {
        font-size: 24px;
    }
    td, th {
        font-size: 10px;
        padding: 8px;
    }
}


