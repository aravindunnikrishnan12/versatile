        <div class="popup" id="copyCodePopup">
            <div class="popup-content">
                <span class="close-popup">&times;</span>
                <p>Code copied!</p>
            </div>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
    const cardItems = document.querySelectorAll('.card-item');
    const copyCodePopup = document.getElementById('copyCodePopup');
    const closePopupBtn = document.querySelector('.close-popup');

    cardItems.forEach(card => {
        card.addEventListener('mouseover', () => {
            const codeToCopy = card.dataset.code;
            card.title = 'Copy code: ' + codeToCopy;
        });

        card.addEventListener('click', () => {
            const codeToCopy = card.dataset.code;
            navigator.clipboard.writeText(codeToCopy)
                .then(() => {
                    copyCodePopup.style.display = 'block';
                })
                .catch(err => console.error('Error copying code: ', err));
        });
    });

    // Close popup when clicking outside the popup content
    window.addEventListener('click', (event) => {
        if (event.target === copyCodePopup) {
            copyCodePopup.style.display = 'none';
        }
    });

    // Close popup when clicking the close button
    closePopupBtn.addEventListener('click', () => {
        copyCodePopup.style.display = 'none';
    });
});

