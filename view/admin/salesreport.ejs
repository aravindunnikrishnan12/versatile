    <style>
         body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
        }
        .background-color {
            margin-top: 0px; 
            background-color:rgb(255, 255, 255); 
            height: 100%;
            width: 100%;
            padding: 1px;
        }
     
         .container {
            width: 90%;
            max-width: 1400px;
            margin: auto;
            padding: 20px;
            border: 1px solid #b8b8b8;
            background-color:#ffffffdc;
            border-radius: 20px;
            /* box-shadow: 9px 10px 44px 0px rgba(0,0,0,0.1); */
            box-shadow: 0 0 5px rgba(1, 2, 3, 1.1);
            overflow-x: auto;
            position: relative;
            left: 8%;
            overflow: hidden;
            margin-top: 30px;
            margin-left: -50px;
        }

        h1 {
            font-size: 30px;
            margin-bottom: 20px;
            text-align: center;
            font-weight: 800;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        tbody{
            border-bottom: 1px solid rgb(227, 227, 227);
        }

        th{
            border: none;
            font-weight: 500;
           
        }

         td {
            padding: 12px;
            text-align: left;
            border: none;
            font-size: 14px;
        }
        tr{
           border: none;
        }
       
        tr:hover {
            background-color: #000000;
        }

        .black-button {
            background-color: rgb(255, 255, 255);
            color: white;
            border-radius: 20px;
            padding: 8px 22px;
            border: none;
            font-size: 12px;
            cursor: pointer;
        }

        .black-button:hover {
            background-color: #333;
        }

        .action-buttons {
            display: flex;
            gap: 10px; /* Adjust as needed */
        }
        .price-filter button {
        background-color: rgb(215, 0, 0);
        color: #fff;
        cursor: pointer;
        margin-left: 10px;
    }

    .price-filter button:hover {
        background-color: #333;
    }
    .price-filter button {
        background-color:#31473A;
        padding: 10px;
        border-radius: 20px;
        border: none;
        margin-right: 5px;
        font-size: 12px;
        transition: all 0.3s ease;
    }
  

    .search-bar {
        display: flex;
        align-items: center;
        margin-left: 20px;
    }
    
    .search-input {
        padding: 8px 12px;
        border-radius: 20px;
        border: 1px solid #ccc;
        outline: none;
    }
    
    .search-button {
        background-color: #31473A;
        color: #fff;
        border: none;
        border-radius: 20px;
        padding: 8px 12px;
        margin-left: 10px;
        cursor: pointer;
    }


    .sidebar {
    text-decoration: none;
    position: fixed;
    top: 75px; /* Height of the navbar */
    left: -250px; /* Initially hidden off-canvas */
    bottom: 0;
    width: 250px;
    background-color: #31473A; /* Same as navbar color */
    color: #fff; /* Text color */
    transition: left 0.3s ease; /* Smooth transition for opening and closing */
    z-index: 1000; /* Ensure sidebar is above other content */
}

.sidebar.show {
    left: 0; /* Show sidebar when .show class is added */
}

.sidebar ul {
    list-style-type: none;
    padding-left: 30px;
}

.sidebar li {
    margin-bottom: 40px;
}

.sidebar a {
    background-color: rgb(255, 255, 255);
    display: block;
    padding: 10px;
    color: #000000;
    text-decoration: none;
    border-radius: 20px;
    width: 210px;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
}

.sidebar a:hover {
    background-color: rgba(200, 200, 200, 0.5);
    text-decoration: none;
    color: #fff;
}
.custom-btn {
    background-color: #4d4f52; /* Button background color */
    color: #fff; /* Text color */
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease; /* Smooth transition on hover */
}

.custom-btn:hover {
    background-color: #000000; /* Hover background color */
}
    </style>
</head>
