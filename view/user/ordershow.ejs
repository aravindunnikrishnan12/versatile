             // Send cancellation request to server
             fetch('/cancelOrder', {
                 method: 'POST',
                 headers: {
                     'Content-Type': 'application/json',
                 },
                 body: JSON.stringify({ orderId: orderId, reason: reason ,productId:productId }),
             }).then(response => {
                 if (response.ok) {
                     // Update the button text to "Cancelled"
                     const cancelButton = document.querySelector(`button[onclick="cancelOrder('${orderId}', '${productId}');"]`);
                     cancelButton.textContent = "Cancelled";
