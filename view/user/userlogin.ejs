                    <p>Enter your personal details</p>
                    <button class="hidden" id="login">Sign In</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Welcome Back!</h1>
                    <p>Register with your personal details</p>
                    <button class="hidden" id="register">Sign Up</button>
                  
                    
                </div>

              

            </div>
        </div>
    </div>


    <script>
        const username = document.getElementById('username');
        const email = document.getElementById('email');
        const password = document.getElementById('password');
        const form = document.getElementById('form');
        const nameError = document.getElementById('name_error');
        const emailValid = document.getElementById('email_valid');
        const passError = document.getElementById('pass_error');
    
        form.addEventListener('submit', (e) => {
            let isValid = true;
    
            // Clear previous error messages
            nameError.innerHTML = "";
            emailValid.innerHTML = "";
            passError.innerHTML = "";
    
            // Validation checks for username
            if (username.value.trim() === '' || username.value === null||!/^[a-zA-Z0-9]+$/.test(username.value)) {
                e.preventDefault();
                nameError.innerHTML = "Name is required and can only contain letters";
                isValid = false;
            }
    
            // Validation checks for email
            const emailCheck = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!email.value.match(emailCheck)) {
                e.preventDefault();
                emailValid.innerHTML = "Email is not valid";
                isValid = false;
            }
    
            // Validation checks for password
            if (password.value.length < 6) {
                e.preventDefault();
                passError.innerHTML = "Password must be more than 6 characters";
                isValid = false;
            }
    
            // Submit the form only if all validation checks pass
            if (isValid) {
                form.submit();
            }
        });
    </script>                                                                                                   
    


    <script>const container = document.getElementById('container');
        const registerBtn = document.getElementById('register');
        const loginBtn = document.getElementById('login');
        
        registerBtn.addEventListener('click', () => {
            container.classList.add("active");
        });
        
        loginBtn.addEventListener('click', () => {
            container.classList.remove("active");
        });
</script>
