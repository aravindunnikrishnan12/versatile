<script>
document.addEventListener('DOMContentLoaded', function() {
    const itemsPerPage = 4;
    const categoryList = document.querySelector('#category-list');
    const pagination = document.querySelector('#pagination');
    const categoryItems = Array.from(categoryList.querySelectorAll('.category-item'));

    function renderPage(page) {
        categoryList.innerHTML = '';
        const start = (page - 1) * itemsPerPage;
        const end = start + itemsPerPage;
        const paginatedItems = categoryItems.slice(start, end);

        paginatedItems.forEach(item => categoryList.appendChild(item));
        renderPagination(page);
    }

    function renderPagination(currentPage) {
        pagination.innerHTML = '';
        const pageCount = Math.ceil(categoryItems.length / itemsPerPage);

        for (let i = 1; i <= pageCount; i++) {
            const pageButton = document.createElement('button');
            pageButton.innerText = i;
            pageButton.classList.add('page-button');
            if (i === currentPage) {
                pageButton.classList.add('active');
            }
            pageButton.addEventListener('click', () => renderPage(i));
            pagination.appendChild(pageButton);
        }
    }

    renderPage(1);
});

</script>

