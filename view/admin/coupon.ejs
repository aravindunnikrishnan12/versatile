<div class="background-color">
    <div class="container">
        <div class="price-filter">
         
                <a href="/admin/getaddcoupon" class="add-link"><button>ADD COUPON</button></a>

        </div>
        <h1 class="headline">Coupon Management</h1>
        <table id="example" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Couponcode</th>
                    <th>Discount</th>
                    <th>Expirydate</th>
                    <th>MaxAmount</th>
                    <th>minAmount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% coupondata.forEach((coupon, index) => { %>
                    <tr class="order-row">
                        <td><%= index + 1 %></td>
                        <td><%= coupon.couponCode %></td>
                        <td><%= coupon.discount %></td>
                        <td><%= new Date(coupon.expiryDate).toLocaleDateString() %> <%= new Date(coupon.expiryDate).toLocaleTimeString() %></td>

                        <td><%= coupon.maxAmount %></td>
                        <td><%= coupon.minAmount %></td>
                        <td class="action-buttons">
                          
                                <form action="/admin/geteditcoupon/<%= coupon._id%>" method="GET">
                                <button class="black-button">Edit</button>
                            </form>
                             
                          
                            <form action="/deletecoupon/<%= coupon._id%>"  method="POST">
                                <button class="black-button">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
           
        </table>
    </div>
